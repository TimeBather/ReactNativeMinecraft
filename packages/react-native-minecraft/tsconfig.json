{
  "compilerOptions": {
    "target": "es2016",
    "module": "ES2020",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "declaration": true,
    "rootDir": "src/",
    "outDir": "dist/",
    "allowSyntheticDefaultImports": true
  }
}
